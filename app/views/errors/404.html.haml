#error_xxx
  - content_for :title do
    Error 404

  .large_code_background
    404
  .absolute_content
    .grid_12.vblk_2

    .grid_10.push_1
      %h1 The page you were looking for doesn't exist
      %p You may have mistyped the address or the page may have moved.


    #exception_message.hidden
      .grid_12.push_1.backtrace
        = @exception.inspect

:javascript
  $(function(){
    $('.clamp_holder').hide()
    $('#error_content').html($('#exception_message').html())
  });

#campaign_save_index
  #nav-box
    =link_to "back", campaign_path(@campaign)
  #edit_save_holder.hidden
  .grid_12
    %h2= "Saves for #{@campaign.name}"

  - saves = @campaign.save_history
  - save_types = [:quicksave, :persistent]
  .clear
  .vblk_1
  .grid_11.half_push
    - save_types.each_with_index do |save_type, index|
      -unless saves[save_type].empty?
        - klass = 'grid_5 alpha'
        - klass << " push_1" if index.eql?(1)
        .save_list{:class => klass}
          %h3= save_type
          - latest = saves[save_type].first
          - saves[save_type][0..4].each_with_index do |qsave, index|
            .left= qsave.date.to_formatted_s(:short)
            .left.with_margin= "#{time_ago_in_words(qsave.date)} ago"
            .right
              - unless index.eql?(0)
                = link_to("restore", edit_save_path(:id => @campaign.id, :sha_id => qsave.to_s, :save_type => save_type), :remote => true)
              -else
                = "current #{save_type}"
            .clear

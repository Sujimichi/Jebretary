= form_for(campaign) do |f|
  .message_errors

  - message = commit.message
  - stored_message = commit_messages[commit.to_s]
  - message = stored_message unless stored_message.blank?
  - message ||= ""
  = text_area_tag :message, message.gsub("<br>", "\r\n"), :rows => 5, :cols => 50
  .small hit tab or click outside the textbox to update
  .small (iPad users, close the keyboard)
  .updating_message.hidden
    .vblk_1
    updating commit message...
    .ajax_loader
